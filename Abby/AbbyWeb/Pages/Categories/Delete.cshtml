@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Category.Id">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="textalert-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <lable asp-for="Category.Name">Name</lable> 
            <br/>
            <input asp-for="Category.Name" disabled class="form=control w-50"/>
            <br/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
           <lable asp-for="Category.DisplayOrder">Display Order</lable>
           <br/>
            <input asp-for="Category.DisplayOrder" disabled class="form=control w-50"/>
            <br/>
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <button type="submit" class="btn btn-primary" style="width:150px" asp-page="../Index">Back to List</button>

    </div>
</form>